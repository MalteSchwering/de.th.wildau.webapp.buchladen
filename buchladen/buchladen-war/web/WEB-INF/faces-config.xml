<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/public/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>detail</from-action>
            <to-view-id>/public/detail.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>userprofil</from-outcome>
            <to-view-id>/authorized/user/userprofil.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/public/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{logoutManagedBean.logout()}</from-action>
            <from-outcome>logout</from-outcome>
            <to-view-id>/public/logout.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/public/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cart</from-outcome>
            <to-view-id>/public/cart.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/authorized/admin/admin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>logoutManagedBean</managed-bean-name>
        <managed-bean-class>de.th.wildau.buchladen.LogoutManagedBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>bookManagedBean</managed-bean-name>
        <managed-bean-class>de.th.wildau.buchladen.BookManagedBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>cartManagedBean</managed-bean-name>
        <managed-bean-class>de.th.wildau.buchladen.CartManagedBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>registeredUserManagedBean</managed-bean-name>
        <managed-bean-class>de.th.wildau.buchladen.RegisteredUserManagedBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <validator>
	<description></description>
	<display-name>EmailAddressValidator</display-name>
	<validator-id>EmailAddressValidator</validator-id>
	<validator-class>de.th.wildau.webapp.buchladen.validator.EmailAddressValidator</validator-class>
    </validator>
    <validator>
        <description></description>
        <display-name>JCaptchaValidator</display-name>
        <validator-id>JCaptchaValidator</validator-id>
        <validator-class>de.th.wildau.webapp.buchladen.validator.JCaptchaValidator</validator-class>
    </validator>
    <validator>
        <description></description>
        <display-name>NameValidator</display-name>
        <validator-id>NameValidator</validator-id>
        <validator-class>de.th.wildau.webapp.buchladen.validator.NameValidator</validator-class>
    </validator>
    <validator>
        <description></description>
        <display-name>InventoryValidator</display-name>
        <validator-id>InventoryValidator</validator-id>
        <validator-class>de.th.wildau.webapp.buchladen.validator.InventoryValidator</validator-class>
    </validator>
    <validator>
        <description></description>
        <display-name>HouseNumberValidator</display-name>
        <validator-id>HouseNumberValidator</validator-id>
        <validator-class>de.th.wildau.webapp.buchladen.validator.HouseNumberValidator</validator-class>
    </validator>
    <validator>
        <description></description>
        <display-name>ZipCodeValidator</display-name>
        <validator-id>ZipCodeValidator</validator-id>
        <validator-class>de.th.wildau.webapp.buchladen.validator.ZipCodeValidator</validator-class>
    </validator>
    <validator>
        <description></description>
        <display-name>StreetNameValidator</display-name>
        <validator-id>StreetNameValidator</validator-id>
        <validator-class>de.th.wildau.webapp.buchladen.validator.StreetNameValidator</validator-class>
    </validator>
</faces-config>
